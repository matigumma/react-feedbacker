{
  "name": "react-feedbacker",
  "version": "1.0.2",
  "description": "A minimal base for creating notifications as feedback in the UI",
  "main": "lib/main/index.js",
  "typings": "lib/main/index.d.ts",
  "module": "lib/module/index.js",
  "author": "Viktor Ivarsson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/viktorivarsson/react-feedbacker.git"
  },
  "keywords": [
    "react",
    "feedback",
    "notification",
    "notify",
    "toast"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "start": "run-s build && cd example && npm start",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rimraf lib",
    "lint": "tslint src/**/*.{ts,tsx}",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "preversion": "npm test"
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "prettier --write",
        "tslint",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/prop-types": "^15.5.5",
    "@types/react": "^16.4.7",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-dom": "^1.12.0",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-testing-library": "^5.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "prop-types": "^15.5.7"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0"
  }
}
