{
  "name": "react-feedbacker",
  "version": "1.0.2",
  "description": "A minimal base for creating notifications as feedback in the UI",
  "main": "lib/main/index.js",
  "typings": "lib/main/index.d.ts",
  "module": "lib/module/index.js",
  "author": "Viktor Ivarsson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/viktorivarsson/react-feedbacker.git"
  },
  "keywords": [
    "react",
    "feedback",
    "notification",
    "notify",
    "toast"
  ],
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "start": "run-s build && cd example && npm start",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "clean": "rimraf lib",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "precommit": "lint-staged",
    "prepush": "npm test",
    "preversion": "npm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^9.1.4",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.2.0",
    "@typescript-eslint/parser": "^2.2.0",
    "eslint": "^6.4.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  }
}
