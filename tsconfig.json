{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "lib/main",
    "rootDir": "src",
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules/**", "src/__tests__/"],
  "compileOnSave": false
}
